{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "dpe-loan-management-system",
  "version": "0.1.0",
  "identifier": "com.dpe.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd .. && npx vite",
    "beforeBuildCommand": "cd .. && npx vite build"
  },
  "app": {
    "windows": [
      {
        "title": "DPE Loan Management System",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
